{
  "name": "Azure CLI DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "containerUser": "vscode",
  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "extensions": "account,resource-graph,containerapp,aks-preview,front-door"
    },
    "ghcr.io/devcontainers-extra/features/opentofu:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2",
      "installDockerBuildx": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    },
    "ghcr.io/schlich/devcontainer-features/powerlevel10k:1": {},
    "ghcr.io/devcontainers-extra/features/ansible:2": {
      "version": "latest",
      "injections": "ansible-lint yamllint"
    },
    "ghcr.io/devcontainers-extra/features/mise:1": {}
  },

  "secrets": {
    "ARM_CLIENT_ID": {
      "description": "Azure Service Principal Client ID"
    },
    "ARM_CLIENT_SECRET": {
      "description": "Azure Service Principal Secret"
    },
    "ARM_TENANT_ID": {
      "description": "Entra ID Tenant ID"
    },
    "ARM_SUBSCRIPTION_ID": {
      "description": "Default Azure Subscription ID"
    }
  },

  "mounts": [
    {
      "source": "azure-cli-config-${devcontainerId}",
      "target": "/home/vscode/.azure",
      "type": "volume"
    },
    {
      "source": "azure-cli-gh-config-${devcontainerId}",
      "target": "/home/vscode/.config/gh",
      "type": "volume"
    },
    {
      "source": "azure-cli-tofu-cache-${devcontainerId}",
      "target": "/home/vscode/.opentofu.d/plugin-cache",
      "type": "volume"
    },
    {
      "source": "azure-cli-mise-data-${devcontainerId}",
      "target": "/home/vscode/.local/share/mise",
      "type": "volume"
    },
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.ssh",
      "target": "/home/vscode/.ssh",
      "type": "bind"
    }
  ],

  "containerEnv": {
    "AZURE_CONFIG_DIR": "/home/vscode/.azure",
    "AZURE_CORE_COLLECT_TELEMETRY": "false",
    "TF_PLUGIN_CACHE_DIR": "/home/vscode/.opentofu.d/plugin-cache",
    "TOFU_PLUGIN_CACHE_DIR": "/home/vscode/.opentofu.d/plugin-cache",
    "MISE_DATA_DIR": "/home/vscode/.local/share/mise",
    "MISE_STATE_DIR": "/home/vscode/.local/share/mise/state",
    "MISE_TRUSTED_CONFIG_PATHS": "/workspaces",
    "MISE_YES": "1",
    "ARM_SKIP_PROVIDER_REGISTRATION": "true",
    "CHECKPOINT_DISABLE": "true",
    "EDITOR": "code --wait",
    "VISUAL": "code --wait"
  },

  "runArgs": [
    "--init",
    "--cap-drop=ALL",
    "--cap-add=NET_BIND_SERVICE",
    "--cap-add=DAC_OVERRIDE",
    "--security-opt=no-new-privileges:true"
  ],

  "onCreateCommand": "mkdir -p /home/vscode/.local/share/mise/state",
  "postCreateCommand": "bash .devcontainer/scripts/post-create.sh",
  "postStartCommand": "bash .devcontainer/scripts/post-start.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "opentofu.vscode-opentofu",
        "hashicorp.hcl",
        "terraform-linters.tflint",
        "redhat.ansible",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-azuretools.vscode-docker",
        "ms-vscode.powershell",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "usernamehw.errorlens",
        "Gruntfuggly.todo-tree",
        "timonwong.shellcheck",
        "streetsidesoftware.code-spell-checker",
        "DavidAnson.vscode-markdownlint",
        "foxundermoon.shell-format",
        "hverlin.mise-vscode",
        "tombi-toml.tombi"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": { "path": "/bin/zsh", "args": ["-l"] },
          "bash": { "path": "/bin/bash" },
          "pwsh": { "path": "/usr/bin/pwsh" }
        },

        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [80, 120],
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active",

        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.exclude": {
          "**/.opentofu": true,
          "**/.terraform": true,
          "**/.terragrunt-cache": true
        },
        "files.associations": {
          "*.toml": "toml",
          "*.hcl": "terraform",
          "*.tftest.hcl": "terraform",
          "terragrunt.hcl": "terraform",
          "root.hcl": "terraform",
          "global.hcl": "terraform",
          "env.hcl": "terraform",
          "region.hcl": "terraform",
          "account.hcl": "terraform",
          "tags.hcl": "terraform",
          ".tflint.hcl": "terraform",
          ".terraform.lock.hcl": "json"
        },
        "search.exclude": {
          "**/.terragrunt-cache": true,
          "**/.opentofu": true,
          "**/.terraform": true
        },
        "files.watcherExclude": {
          "**/.terragrunt-cache/**": true,
          "**/.opentofu/**": true,
          "**/.terraform/**": true
        },

        "[opentofu]": {
          "editor.defaultFormatter": "opentofu.vscode-opentofu",
          "editor.formatOnSave": true,
          "editor.tabSize": 2
        },
        "[opentofu-vars]": {
          "editor.defaultFormatter": "opentofu.vscode-opentofu"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml"
        },
        "[powershell]": {
          "editor.defaultFormatter": "ms-vscode.powershell",
          "editor.tabSize": 4
        },
        "[terraform]": {
          "editor.defaultFormatter": "opentofu.vscode-opentofu",
          "editor.formatOnSave": true,
          "editor.tabSize": 2
        },
        "[ansible]": {
          "editor.tabSize": 2,
          "editor.insertSpaces": true,
          "editor.formatOnSave": true
        },
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format",
          "editor.tabSize": 2
        },
        "[markdown]": {
          "editor.wordWrap": "on"
        },
        "[toml]": {
          "editor.defaultFormatter": "tombi-toml.tombi",
          "editor.formatOnSave": true
        },

        "opentofu.languageServer.enable": true,
        "opentofu.codelens.referenceCount": true,
        "opentofu.experimentalFeatures.validateOnSave": true,
        "opentofu.experimentalFeatures.prefillRequiredFields": true,

        "ansible.python.interpreterPath": "/usr/local/bin/python",
        "ansible.validation.enabled": true,
        "ansible.validation.lint.enabled": true,

        "powershell.codeFormatting.preset": "OTBS",
        "powershell.integratedConsole.showOnStartup": false,

        "gitlens.currentLine.enabled": true,
        "gitlens.codeLens.enabled": true,

        "errorLens.enabledDiagnosticLevels": ["error", "warning"],

        "todo-tree.general.tags": ["TODO", "FIXME", "HACK", "SECURITY"],

        "cSpell.words": [
          "azurerm",
          "opentofu",
          "tofu",
          "tflint",
          "terragrunt",
          "trivy",
          "tfvars",
          "tfstate",
          "devcontainer"
        ]
      }
    }
  },

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  }
}
